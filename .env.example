# Database Configuration
DATABASE_URL=sqlite:///arv.db

# Session Security
SESSION_SECRET=your-secret-key-change-me-in-production

# OpenAI Integration (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# CLIP Integration (Optional)
CLIP_ENABLE=0
CLIP_WEIGHT=0.5

# Embeddings Provider
# Options: "openai", "tfidf", "auto" (auto will use openai if key is available, otherwise tfidf)
EMBEDDINGS_PROVIDER=auto

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Development Mode
DEBUG=1

# ARV Platform Settings
DEFAULT_TRIAL_DURATION_SECONDS=300
MAX_DESCRIPTORS_PER_TRIAL=50
ENABLE_REAL_TIME_COLLABORATION=1

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=168
